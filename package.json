{
  "name": "product-search-app",
  "version": "1.0.0",
  "description": "Product Search & Copy App",
  "type": "module",
  "scripts": {
    "build": "npm run install:all && npm run build:frontend",
    "install:all": "npm run install:backend && npm run install:frontend",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "build:frontend": "cd frontend && npm run build",
    "start": "node backend/server.js",
    "compress-images": "node backend/scripts/compress-existing.js",
    "watch-images": "node -e \"import('./backend/utils/imageWatcher.js').then(m => m.startImageWatcher('./frontend/public/images'))\""
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "react-router-dom": "^7.13.0"
  }
}
